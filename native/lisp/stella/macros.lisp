        ((CL:EQ *TRANSLATOROUTPUTLANGUAGE* KWD-MACROS-COMMON-LISP)
         (CL:RETURN-FROM %DEFMAIN
          (LIST* SYM-MACROS-STELLA-DEFUN MAINNAME
           (LIST*
            (LIST* |SYM-MACROS-STELLA-&REST|
             (LIST* SYM-MACROS-STELLA-%%ARGS SYM-MACROS-STELLA-STRING
