       (CL:IF
        (CL:AND (CL:NOT (CL:EQ *CURRENTSYSTEMDEFINITION* NULL))
         (CL:NOT
          (CL:EQ (LOOKUP OPTIONS KWD-MACROS-STARTUP-SYSTEM?)
           SYM-MACROS-STELLA-FALSE)))
        (CONS
         (CONS
          (SYSTEM-STARTUP-FUNCTION-SYMBOL *CURRENTSYSTEMDEFINITION*)
          NIL)
         NIL)
        NIL)))
