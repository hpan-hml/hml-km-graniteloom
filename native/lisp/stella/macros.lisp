    (MAINNAME (INTERN-SYMBOL-IN-MODULE "MAIN" *MODULE* CL:T))
    (BODYWITHHEADER (CONS NULL BODY)))
   (CL:LET* ((SELF-000 (NEW-PROPERTY-LIST)))
    (CL:SETF (%THE-PLIST SELF-000)
     (EXTRACT-OPTIONS BODYWITHHEADER NULL))
    (CL:LET*
     ((OPTIONS SELF-000)
