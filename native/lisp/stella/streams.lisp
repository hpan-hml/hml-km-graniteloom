      (LIST* SYM-STREAMS-STELLA-PRINT-STREAM
       SYM-STREAMS-STELLA-STANDARD-ERROR SYM-STREAMS-STELLA-EOL
       (WRAP-STRING " ")
       (CONCATENATE MESSAGEARGUMENTS
        (LIST* (WRAP-STRING ".") SYM-STREAMS-STELLA-EOL NIL)))
      NIL)
     NIL))))

